{
    "version": "2.5.3",
    "compilerOptions": {
      "target": "es2015",
      "module": "commonjs",
      "declaration": false,
      "noImplicitAny": false,
      "removeComments": false,
      "noLib": false,
      "sourceMap": true,
      "allowJs": true
    },
    "exclude": [
      "node_modules"
    ],
    "filesGlob": [
      "./config/**/*.ts",
      "./controllers/**/*.ts",
      "./models/**/*.ts",
      "./**/*.ts"
    ],
    "atom": {
      "rewriteTsconfig": false
    }
  }